<Window x:Class="DesktopContacts.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContacts"
        mc:Ignorable="d"
        Title="New Contact " Height="600" Width="600">
    <Grid>
        <StackPanel Margin="15">
            <Label Content="Name:"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,15"/>
            <Label Content="Email Address:"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,15"/>
            <Label Content="Phone Number:"/>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,10"/>
            <Button Content="Save" x:Name="saveButton" Click="SaveButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
